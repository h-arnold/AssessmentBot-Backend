{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override only necessary options for ESM test execution
    "module": "ES2022", // Use ESM for tests
    "target": "ES2022", // Match base config
    "moduleResolution": "node", // Match base config
    "allowSyntheticDefaultImports": true, // Match base config
    "esModuleInterop": true // Match base config
    // All other options are inherited from tsconfig.json
  },
  "ts-node": {
    "esm": true // Enable ESM for ts-node
  }
}
